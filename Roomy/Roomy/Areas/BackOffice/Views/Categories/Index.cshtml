@model IEnumerable<Roomy.Models.Category>

@{
    ViewBag.Title = "Index";
}

<h2>Liste des catégories</h2>

<p>
    <a href="@Url.Action("Create")" class="btn btn-info"><i class="fa fa-plus-circle"></i> Ajouter une catégorie</a>
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Name)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.Name)
        </td>
        <td>
            <a href="@Url.Action("Edit", new { id=item.ID})"><i class="fa fa-edit"></i></a>
            <a href="@Url.Action("Details", new { id=item.ID})"><i class="fa fa-search"></i></a>
            <a href="@Url.Action("Delete", new { id=item.ID})"><i class="fa fa-trash"></i></a>
        </td>
    </tr>
}

</table>
